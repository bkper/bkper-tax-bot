{
  "name": "tax-bot",
  "version": "2.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "gts clean",
    "login:bkper": "bkper login",
    "upgrade:app": "yarn upgrade bkper --latest",
    "upgrade:api": "yarn upgrade @bkper/bkper-node --latest",
    "build": "yarn clean && tsc && cp package.json dist/",
    "watch": "run-p watch:*",
    "watch:compile": "tsc -w --incremental",
    "watch:webhook": "node webhook",
    "watch:nodemon": "nodemon --watch ./dist/ --exec yarn functions",
    "functions": "functions-framework --source=dist/ --target=doPost --port=3000",
    "patch": "yarn version --patch",
    "minor": "yarn version --minor",
    "major": "yarn version --major",
    "deploy": "yarn build && yarn --cwd dist/ deploy:dist",
    "deploy:dist": "gcloud functions deploy prod --runtime nodejs12 --trigger-http --entry-point doPost --project bkper-tax-trigger",
    "preversion": "yarn deploy",
    "postversion": "git push && git push --tags && echo \"Successfully released version $npm_package_version!\""
  },
  "devDependencies": {
    "@bkper/bkper-api-types": "^3.7.1",
    "@types/express": "^4.17.10",
    "@types/node": "^14.11.2",
    "gts": "^3.0.3",
    "localtunnel": "^2.0.1",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^1.7.1",
    "bkper": "^1.1.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-http-context": "^1.2.4",
    "source-map-support": "^0.5.19"
  }
}
