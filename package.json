{
  "name": "tax-bot",
  "version": "1.6.4",
  "main": "index.js",
  "scripts": {
    "clean": "gts clean",
    "upgrade:api": "yarn upgrade @bkper/bkper-node --latest",
    "build": "tsc -p . && cp package.json dist",
    "start": "functions-framework --source=dist/ --target=doPost",
    "watch": "concurrently \"tsc -w\" \"nodemon --watch ./dist/ --exec yarn start\" \"npx localtunnel --port 8080 --subdomain bkper-tax-bot\"",
    "patch": "yarn version --patch",
    "minor": "yarn version --minor",
    "major": "yarn version --major",
    "deploy": "yarn build && yarn --cwd dist/ deploy:dist",
    "deploy:dist": "gcloud functions deploy dev --runtime nodejs12 --trigger-http --entry-point doPost --project bkper-tax-trigger",
    "preversion": "yarn push",
    "postversion": "yarn deploy && git push && git push --tags && echo \"Successfully released version $npm_package_version!\""
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/node": "^14.11.2",
    "concurrently": "^5.3.0",
    "gts": "^3.0.3",
    "nodemon": "^2.0.7",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^1.7.1"
  }
}
